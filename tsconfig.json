{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ES2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths":{
      "@*":[
        "iwo/src/*",
      ],
      "iwo":[
        "iwo/src/iwo"
      ],
      "imgui-js/*":[
        "lib/imgui-js/*",
      ]
    },
    "outDir": "docs",
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictPropertyInitialization" : true
  },
  "typedef":[
    true,
    "call-signature",
    "property-declaration"
  ],
  "exclude": [
    "docs",
    "node_modules",
    "rollup.config"
  ],
  "include": [
    "examples/*",
    "iwo/src/*"
  ]

}